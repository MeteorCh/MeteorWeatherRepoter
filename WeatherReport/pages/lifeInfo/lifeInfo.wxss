/* pages/lifeInfo/lifeInfo.wxss */
@import "../index/index.wxss";
@import "../template/template.wxss";
.day-desc {
  font-size: 25rpx;
  color:grey;
  margin-top: 10rpx;
}

.day-night {
  margin: 10rpx 0 10rpx 0; 
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.day-night .split{
  border: none;
  border-left:3rpx dashed gray;  
  height:80rpx;
  width: 0rpx;
  padding: 0;
  margin: 10rpx 0;
}

.today {
  padding-top:20rpx;
}
.today .weather {
  padding-top:20rpx;
  padding-left: 0rpx;
}
.today .weather .pic {
  width: 100rpx;
  height: 100rpx;
}
.today .weather .desc {
  float: right;
  width:150rpx;
}

.today .more{
  font-size: 40rpx;
  margin-top: 30rpx;
  color: #FF6426;
  font-style: bold;
}
.card {
  margin-top: 20rpx;
  margin-left:20rpx;
  margin-right:20rpx;
  color:#404040;
}
.card .title {
  display: block;
  text-align:center;
  padding-bottom:5px;
  margin:30rpx 50rpx;
  margin-bottom:5px;
  font-size:40rpx;
}
.life .item {
  display: inline-block;
}
.life .tip{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.life .item .line {
  background: #f9f9f9;
  margin: 20rpx 10rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  display: flex;  
  flex-direction:row;
  justify-content:center;
  width: 310rpx;
}

.life .item .name, .life .item .desc{
   font-size: 25rpx;
   line-height: 48rpx;
   padding-top: 5rpx;
}
.life .item .desc text {
  font-size: 20rpx;
  line-height: 25rpx;
  margin-left: 20rpx;
  margin-top:5rpx;
  color:#404040;
}

